@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Brands", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Brand</h4>
        <hr />

        <div class="form-group">
            @Html.Label("BrandName", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("BrandName", "", new { @class = "form-control", type = "text" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Upload Image", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("UrlLogo", "", new { @class = "form-control", type = "file" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
