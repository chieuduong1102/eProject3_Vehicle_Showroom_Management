@model eProject3_Vehicle_Showroom_Management.Models.Brand

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Brand</h4>
    <hr />

    <div class="form-group">
        @Html.Label("BrandName", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("BrandName", "", new { @class = "form-control", type = "text" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Upload Image", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("UrlLogo", "", new { @class = "form-control", type = "file" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
    <br />
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
