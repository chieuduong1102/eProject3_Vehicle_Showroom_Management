}

<header>
    <div class="container">
        <div class="row">
            <div id="header">
                <div class="header-container">
                    <div class="header-logo">
                        <a href="@Url.Action("Index", "Home")" title="Car HTML" class="logo">
                            <div><img src="~/Content/images/logo1.png" alt="Car Store"></div>
